.panel
    background: #fff
    border: 1px solid #ddd
    border-radius: 2px
    margin: 10px 0
    
    > div
        padding: 10px
    
    &__heading
        background: $brand-color
        border-bottom: 1px solid #ddd
        color: white
        font-size: 16px
        font-weight: bold
        
    &__body
        text-align: justify
        
    &__footer
        background: #f9f9f9
        border-top: 1px solid #ddd

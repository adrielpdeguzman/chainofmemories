$navbar-height = 50px

.Navbar
    align-items: center
    background-color: #000
    display: flex
    flex-wrap: wrap
    height: $navbar-height
    left: 0
    position: fixed
    top: 0
    width: 100%

    &__brand
        flex-basis: 150px

    &__links
        display: inline-block
        list-style: none
        
        > li
            flex-basis: 1
            text-align: center

        &--right
            display: flex
            justify-content: flex-end
